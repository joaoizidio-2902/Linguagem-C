#include <stdio.h>

float som (float som_x, float som_y)
{
	return (som_x + som_y);
}
float sub (float sub_x, float sub_y)
{
	return (sub_x - sub_y);
}

float mul (float mul_x, float mul_y)
{
	return (mul_x * mul_y);
}

float divi (float divi_x, float divi_y)
{
	return (divi_x / divi_y);
}

int main(){
	float x, y;
	printf ("Entre com o primeiro valor: ");
	scanf ("%f", &x);
	
	printf ("Entre com o segundo valor: ");
	scanf ("%f", &y);
	
	printf ("\n%.1f + %.1f = %.1f ", x, y, som(x,y));
	printf ("\n%.1f - %.1f = %.1f ", x, y, sub(x,y));
	printf ("\n%.1f * %.1f = %.1f ", x, y, mul(x,y));
	printf ("\n%.1f / %.1f = %.1f ", x, y, divi(x,y));
		
}
